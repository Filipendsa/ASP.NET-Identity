@model ErrorViewModel
@{
    ViewData["Title"] = Model == null ? "Ocorreu um Erro!" : Model.Titulo;
@{ 
    if (Model == null)
    {
        <div>
            <h2 class="text-danger">Ops! Ocorreu um erro, mas não se preocupe. Nosso time será avisado e iremos corrigir em breve!</h2>
        </div>
    }
    else
    {
        <h1>@Html.Raw(Model.Titulo)</h1>
        <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
    }
}